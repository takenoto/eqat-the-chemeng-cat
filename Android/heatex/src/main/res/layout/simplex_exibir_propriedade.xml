<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/propriedadeSimplexLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/siglaSimplexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="4"
        android:padding="8dp"
        android:text="w"
        android:textColor="@color/colorCalc1" />

    <TextView
        android:id="@+id/igualSimplexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="8dp"
        android:text="="
        android:textColor="@color/colorCalc1" />

    <TextView
        android:id="@+id/valorSimplexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="55"
        android:textColor="@color/colorCalc1" />

    <TextView
        android:id="@+id/unidadeSimplexTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="8dp"
        android:text="kg/s"
        android:textColor="@color/colorCalc1" />
</LinearLayout>